<%= form_with(model: time) do |f| %>
    <div class="p-4">
        <div class="grid gap-4 mb-4 grid-cols-4">
            <div class="col-span-2">
                <%= f.label :day, "Hari", class: "block mb-2 text-xs md:text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.collection_select :day_id, days, :id, :name,
                    { prompt: 'Pilih hari' },
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-xs md:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" 
                %>
            </div>
            <div class="col-span-2">
                <%= f.label :session, "Sesi", class: "block mb-2 text-xs md:text-sm font-medium text-gray-900 dark:text-white" %>
                <%= f.select :session,
                    options_for_select([
                        ['Pagi', 'pagi'],
                        ['Siang', 'siang']
                    ], selected: time.session),
                    {},
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-xs md:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" 
                %>
            </div>
            <div class="col">
                <%= f.label :order, "Jam ke-", class: "block mb-2 text-xs md:text-sm font-medium #{time.errors[:order].any? ? 'text-red-700' : ''  }" %>
                <%= f.text_field :order, class: "bg-gray-50 border text-xs md:text-sm rounded-lg block w-full p-2.5
                    #{time.errors[:order].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}", placeholder: "1" %>                     
            </div>
            <div class="col-span-3">
                <%= f.label :time, "Waktu", class: "block mb-2 text-xs md:text-sm font-medium #{time.errors[:time].any? ? 'text-red-700' : ''  }" %>
                <%= f.text_field :time, class: "bg-gray-50 border text-xs md:text-sm rounded-lg block w-full p-2.5
                    #{time.errors[:time].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}", placeholder: "07:30 - 08:00" %>               
            </div>
            <% if time.errors.any? %>
                <div class="col-span-4 text-red-700 rounded-lg text-xs md:text-sm">   
                    <%= time.errors[:time].first %>
                </div>
            <% end %>
            <% if time.persisted? %>
                <div class="col-span-4">
                    <%= f.check_box :is_active, class: "mr-2 w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                    <%= f.label :is_active, "Aktif", class: "text-xs md:text-sm font-medium" %>
                </div>
            <% end %>
        </div>
        <%= f.submit "Simpan", class: "text-xs md:text-sm text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-xs md:text-sm px-5 py-2.5 text-center" %>
    </div>
<% end %>