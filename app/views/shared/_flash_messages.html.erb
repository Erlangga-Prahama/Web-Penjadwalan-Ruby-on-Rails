<% if flash[:success] %>
  <div id="simple-success-alert" class="fixed sm:top-2 md:top-auto md:bottom-4 right-1 md:right-4 z-50 p-1 md:p-4 mb-4 text-xs md:text-sm text-green-800 rounded-lg bg-green-50 border border-green-300 flex items-center">
    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
    </svg>
    <%= flash[:success] %>
  </div>

  <script>
    document.addEventListener('turbo:load', function() {
      const alert = document.getElementById('simple-success-alert');
      if (alert) {
        setTimeout(() => {
          alert.classList.add('opacity-0', 'transition-opacity', 'duration-300');
          setTimeout(() => alert.remove(), 300); // Tunggu animasi selesai
        }, 4000);
      }
    });
  </script>
<% end %>

<% if flash[:danger] %>

  <div id="alert-1" class="fixed sm:top-2 md:top-auto md:bottom-4 right-1 md:right-4 z-50 p-1 md:p-4 mb-4 text-xs md:text-sm text-red-800 rounded-lg bg-red-50 border border-red-300 flex items-center" role="alert">
    <svg class="shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
      <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
    </svg>
    <span class="sr-only">Info</span>
    <div class="ms-3 text-xs md:text-sm font-medium">
       <%= flash[:danger].html_safe %>
    </div>
      <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-6 w-6 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-1" aria-label="Close">
        <span class="sr-only">Close</span>
        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
        </svg>
    </button>
  </div>

  <script>
    document.addEventListener('turbo:load', function() {
      const alert = document.getElementById('alert-1');
      if (alert) {
        setTimeout(() => {
          alert.classList.add('opacity-0', 'transition-opacity', 'duration-300');
          setTimeout(() => alert.remove(), 300); // Tunggu animasi selesai
        }, 4000);
      }
    });
  </script>
  
<% end %>