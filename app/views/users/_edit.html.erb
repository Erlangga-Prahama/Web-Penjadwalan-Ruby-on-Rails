
<div id="edit-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="relative p-4 w-full max-w-md">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="flex items-center justify-between p-4 border-b">
            <h3 class="text-sm md:text-lg font-semibold">Edit Akun</h3>
            <button type="button" class="text-gray-400 hover:text-gray-900" onclick="closeEdit()">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            </button>
        </div>
            <%= render 'form', user: @user, teachers: @teachers  %>
            <p id="helper-text-explanation" class="leading-none w-full p-3 text-xs md:text-sm text-gray-500 dark:text-gray-400">
                Kosongkan kata sandi jika anda tidak ingin merubahnya.
            </p>
        </div>
    </div>
</div>


<script>
  function closeEdit() {
    document.getElementById('edit-modal').style.display = 'none';
  }
</script>