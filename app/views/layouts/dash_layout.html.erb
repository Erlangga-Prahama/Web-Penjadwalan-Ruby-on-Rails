    <div id="edit-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
      <div class="relative p-4 w-full max-w-xs">
          <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
          <div class="flex items-center justify-between p-4 border-b">
              <h3 class="text-sm md:text-lg font-semibold">Edit Akun</h3>
              <button type="button" class="text-gray-400 hover:text-gray-900" onclick="closeEdit()">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              </button>
          </div>
          <% @user = current_user %>
              <%= form_with(model: @user, url: user_path(@user), method: :patch) do |f| %>
                <div class="p-4">
                    <div class="mb-4 grid gap-4 grid-cols-4">
                        <div class=" col-span-4">
                            <%= f.label :email, "Email", class: "block mb-2 text-xs md:text-sm font-medium #{@user.errors[:email].any? ? 'text-red-700' : ''  }" %>
                            <%= f.text_field :email, class: "bg-gray-50 w-full border text-xs md:text-sm rounded-lg block w-full p-2.5
                                #{@user.errors[:email].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
                                
                            <% if @user.errors[:email].any? %>
                            <div class="p-2 w-full text-red-700 text-xs md:text-sm"> 
                                <%= @user.errors[:email].first %>
                            </div>
                            <% end %>
                        </div>
                        <div class=" col-span-4">
                            <%= f.label :password, "Kata sandi", class: "block mb-2 text-xs md:text-sm font-medium #{@user.errors[:password].any? ? 'text-red-700' : ''  }" %>
                            <%= f.password_field :password, class: "bg-gray-50 w-full border text-xs md:text-sm rounded-lg block w-full p-2.5
                                #{@user.errors[:password].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
                                
                            <% if @user.errors[:password].any? %>
                            <div class=" p-2 w-full text-red-700 text-xs md:text-sm"> 
                                <%= @user.errors[:password].first %>
                            </div>
                            <% end %>
                        </div>
                        <div class=" col-span-4">
                            <%= f.label :password_confirmation, "Konfirmasi kata sandi", class: "block mb-2 text-xs md:text-sm font-medium #{@user.errors[:password_confirmation].any? ? 'text-red-700' : ''  }" %>
                            <%= f.password_field :password_confirmation, class: "bg-gray-50 w-full border text-xs md:text-sm rounded-lg block w-full p-2.5
                                #{@user.errors[:password_confirmation].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
                                
                            <% if @user.errors[:password_confirmation].any? %>
                            <div class="p-2 w-full text-red-700 text-xs md:text-sm"> 
                                <%= @user.errors[:password_confirmation].first %>
                            </div>
                            <% end %>
                        
                        </div>
                    </div>
                    <p id="helper-text-explanation" class="leading-none w-full my-2 text-xs md:text-sm text-gray-500 dark:text-gray-400">
                      Kosongkan kata sandi jika anda tidak ingin merubahnya.
                    </p>
                  

                    <%= f.submit "Simpan", class: "text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-xs md:text-sm px-5 py-2.5 text-center" %>
                </div>
            <% end %>
          </div>
