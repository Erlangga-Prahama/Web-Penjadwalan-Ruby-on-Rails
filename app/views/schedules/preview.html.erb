      Ajukan Draft Jadwal
    <% end %>

    <%= link_to destroy_draft_schedules_path, data: {
      turbo_method: :delete,
      turbo_confirm: "Anda yakin ingin menghapus data?"}, class: "text-white bg-gradient-to-r from-red-500 via-red-600 to-red-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 shadow-md shadow-red-500/50 dark:shadow-lg dark:shadow-red-800/80 font-medium rounded-lg text-sm px-3 py-1.5 text-center me-2 mb-2" do %>
        Hapus
    <% end %>


  </div>


  <span class="mb-5 block"></span>

  <% ordered_days = @days %>
  <% all_time_blocks = TimeBlock.includes(:day).where(is_active: true).order(:day_id, :order)
                              .group_by { |tb| [tb.day_id, tb.session] } %>

  <% active_grades = @sorted_class_rooms.map(&:grade).uniq.sort %>

  <% active_grades.each do |grade| %>
    <% class_rooms_in_grade = sorted_class_rooms.select { |cr| cr.name.starts_with?(grade.to_s) && cr.is_active } %>
    <% next if class_rooms_in_grade.empty? %>

    <% session_type = grade == 7 ? 'siang' : 'pagi' %>

    <div class="overflow-auto rounded shadow p-4 mb-6 bg-white">
      <h2 class="text-lg font-semibold mb-2">Jadwal Kelas <%= grade %></h2>
      <table class="table-auto border-collapse border w-full text-xs text-center">
        <thead>
          <tr class="bg-gray-200">
            <th class="border p-1 w-24">Hari</th>
            <th class="border p-1 w-32">Jam</th>
            <% class_rooms_in_grade.each do |class_room| %>
              <th class="border p-1"><%= class_room.name %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% ordered_days.each do |day| %>
            <% time_blocks = all_time_blocks[[day.id, session_type]] || [] %>
            <% time_blocks.each_with_index do |time_block, i| %>
              <tr>
                <% if i == 0 %>
                  <td class="border p-1 bg-gray-100" rowspan="<%= time_blocks.size %>"><%= day.name %></td>
                <% end %>
                <td class="border p-1 bg-gray-100"><%= time_block.time %></td>

                <% class_rooms_in_grade.each do |class_room| %>
                  <% jadwal_kelas = @drafts[class_room.id] || [] %>
                  <% kegiatan_kelas_ini = @activities.select { |a| a.grade == grade } %>

                  <% item = nil %>

                  <% jadwal_kelas.each do |sch| %>
                    <% if sch.day == day.name && sch.time_block_id == time_block.id %>
                      <% item = { type: :schedule, subject: sch.subject.code, teacher: sch.teacher.nama, teacher_code: sch.teacher.teacher_code } %>
                      <% break %>
                    <% end %>
                  <% end %>

                  <% if item.nil? %>
                    <% kegiatan_kelas_ini.each do |act| %>
                      <% if act.time_blocks.any? { |tb| tb.id == time_block.id } %>
                        <% item = { type: :activity, name: act.name } %>
                        <% break %>
                      <% end %>
                    <% end %>
                  <% end %>

                  <% if item.present? %>
                    <td class="border p-1 <%= item[:type] == :activity ? 'bg-yellow-100 italic' : 'bg-blue-50' %>">
                      <% if item[:type] == :activity %>
                        <div><%= item[:name] %></div>
                      <% else %>
                        <div class="font-semibold"><%= "#{item[:subject]} / #{item[:teacher_code]}" %></div>
                      <% end %>
                    </td>
                  <% else %>
                    <td class="border p-1">&nbsp;</td>
                  <% end %>
                <% end %>
              </tr>
            <% end %>

          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <div class="overflow-auto max-h-[600px] rounded shadow mb-6 bg-white">
    <h2 class="text-lg font-semibold mb-2">Alokasi Jam Mengajar Guru</h2>
    <% all_teachers = Teacher.order(:teacher_code) %>
    <% class_names = @sorted_class_rooms.map(&:name) %>

    <table class="table-auto border-collapse border w-full text-xs text-center">
      <thead class="">
        <tr class="bg-gray-200">
          <th class="border p-1 w-24 sticky top-0 bg-gray-200 z-10">Kode Guru</th>
          <th class="border p-1 w-40 sticky top-0 bg-gray-200 z-10">Nama Guru</th>
          <th class="border p-1 w-40 sticky top-0 bg-gray-200 z-10">Mata Pelajaran</th>
          <% class_names.each do |class_name| %>
            <th class="border p-1 sticky top-0 bg-gray-200 z-10"><%= class_name %></th>
          <% end %>
          <th class="border p-1 w-24 sticky top-0 bg-gray-200 z-10">Total Kelas</th>
          <th class="border p-1 w-24 sticky top-0 bg-gray-200 z-10">Total Jam</th>
        </tr>
      </thead>
      <tbody>
        <% all_teachers.each do |teacher| %>
          <% teacher_subjects = @drafts.values.flatten.select { |d| d.teacher_id == teacher.id }.map(&:subject).uniq %>
          <% teacher_subjects.each do |subject| %>
            <tr>
              <td class="border p-1 text-center"><%= teacher.teacher_code %></td>
              <td class="border p-1 text-left"><%= teacher.nama %></td>
              <td class="border p-1 text-left"><%= subject.name %></td>

              <% total_jam = 0 %>
              <% total_kelas = 0 %>

              <% class_names.each do |class_name| %>
                <% class_room = @sorted_class_rooms.find { |cr| cr.name == class_name } %>
                <% drafts = @drafts[class_room.id] || [] %>
                <% jumlah = drafts.count { |d| d.teacher_id == teacher.id && d.subject_id == subject.id } %>
                <% total_jam += jumlah %>
                <% total_kelas += 1 if jumlah > 0 %>
                <td class="border p-1">
                  <% if jumlah > 0 %>
                    <svg class="w-6 h-6 text-green-500 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 11.917 9.724 16.5 19 7.5"/>
                    </svg>
                  <% else %>
                    &nbsp;
                  <% end %>
                </td>
              <% end %>

              <td class="border p-1 font-semibold"><%= total_kelas %></td>
              <td class="border p-1 font-semibold"><%= total_jam %></td>
            </tr>
          <% end %>
        <% end %>

      </tbody>
    </table>
  </div>


</div>



  <div id="new"></div>

  <% if @show_new_modal %>
    <%= render 'new', scheduleBatch: @bat %>
  <% end %>
</div>


