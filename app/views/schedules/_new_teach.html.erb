<div id="replace-modal" class="fixed overflow-y-auto inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 ">
  <div class="relative p-4 max-w-lg max-h-full">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      
      <!-- Header -->
      <div class="flex items-center justify-between p-4 border-b dark:border-gray-600">
        <h3 class="text-sm md:text-lg font-semibold text-gray-900 dark:text-white">
          Ganti Guru Terjadwal
        </h3>
        <button type="button" class="text-gray-400 hover:text-gray-900 dark:hover:text-white" onclick="closeReplaceModal()">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Form -->
      <%= form_with url: replace_teacher_schedules_path, method: :post, local: true do |f| %>
        <div class="p-4 md:p-5 space-y-4">

          <!-- Old Teacher -->
          <%= hidden_field_tag :schedule_batch_id, scheduleBatch.id %>
          <div>
            <%= label_tag :old_teacher_code, "Guru Terjadwal", class: "block mb-2 text-xs md:text-sm font-medium text-gray-900 dark:text-white" %>
            <%= select_tag :old_teacher_code,
                options_for_select(@scheduled_teachers.map { |code, name| [ "#{name}", code ] }),
                prompt: "Pilih Guru yang Mau Diganti",
                id: "old_teacher_select",
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-xs md:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
          </div>

          <!-- New Teacher -->
          <div>
            <%= label_tag :new_teacher_code, "Guru Pengganti", class: "block mb-2 text-xs md:text-sm font-medium text-gray-900 dark:text-white" %>
            <%= select_tag :new_teacher_code,
                options_from_collection_for_select(replacement_teachers, "teacher_code", "nama"),
                prompt: "Pilih Guru Pengganti",
                id: "new_teacher_select",
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-xs md:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" %>
          </div>

        </div>

        <!-- Footer -->
        <div class="flex items-center justify-end p-4 border-t dark:border-gray-600">
          <%= f.submit "Ganti Guru", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-xs md:text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<script>
    function closeReplaceModal() {
        document.getElementById('replace-modal').style.display = 'none';
    }

  document.addEventListener("DOMContentLoaded", () => {
    const oldSelect = document.getElementById("old_teacher_select");
    const newSelect = document.getElementById("new_teacher_select");

    oldSelect.addEventListener("change", () => {
      const teacherCode = oldSelect.value;

      fetch(`/teachers/by_subject?teacher_code=${teacherCode}`)
        .then(res => res.json())
        .then(data => {
          newSelect.innerHTML = '<option value="">Pilih Guru Pengganti</option>';
          data.forEach(t => {
            const opt = document.createElement("option");
            opt.value = t.teacher_code;
            opt.text = t.nama;
            newSelect.appendChild(opt);
          });
        });
    });
  });

</script>