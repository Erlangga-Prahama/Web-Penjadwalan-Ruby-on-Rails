      </div>
    </div>
  </div>
<% end %>

<div class="flex flex-col w-full mt-3">
  <% if @draft.present? %>
      <span class="text-sm md:text-lg font-semibold mb-2">Draft </span>
      <%= link_to 'Draft Jadwal', preview_schedules_path, class: "hover:bg-gray-100 bg-gray-50 w-full h-10 p-3 rounded shadow text-center font-bold text-xs md:text-sm" %>
  <% end %>

  
  <% if @schedule_batches.present? %>
    <span class="text-sm md:text-lg font-semibold mb-2">Jadwal diajukan </span>
    <% @schedule_batches.each do |batch| %>
      <%= link_to "Jadwal Mata Pelajaran Semester #{batch.name} Tahun #{batch.year}", preview_generated_schedules_path(id: batch), class: "flex items-center justify-center hover:bg-gray-100 bg-gray-50 w-full h-10 p-3 rounded shadow text-center font-bold text-xs md:text-sm" %>
    <% end %>
  <% end %>
</div>

