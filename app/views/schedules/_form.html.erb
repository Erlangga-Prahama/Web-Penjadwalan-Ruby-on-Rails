<%= form_with model: scheduleBatch, url: save_generated_schedules_path, method: :post do |f| %>
    <div class="p-4">
        <div class="grid grid-cols-3 gap-2 w-64">
            <div class="mb-4 col-span-2">
                <%= f.label :name, "Semester", class: "block mb-2 text-sm font-medium #{scheduleBatch.errors[:name].any? ? 'text-red-700' : ''  }" %>
                <%= f.text_field :name, class: "bg-gray-50 w44 border text-sm rounded-lg block w-full p-2.5
                    #{scheduleBatch.errors[:name].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
                    
                <% if scheduleBatch.errors[:name].any? %>
                <div class="mb-2 p-2 w-2 text-red-700 text-sm"> 
                    <%= scheduleBatch.errors[:name].first %>
                </div>
                <% end %>
            </div>
            <div class="mb-4">
                <%= f.label :year, "Tahun", class: "block mb-2 text-sm font-medium #{scheduleBatch.errors[:year].any? ? 'text-red-700' : ''  }" %>
                <%= f.text_field :year, class: "bg-gray-50 w44 border text-sm rounded-lg block w-full p-2.5
                    #{scheduleBatch.errors[:year].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
                    
                <% if scheduleBatch.errors[:year].any? %>
                <div class="mb-2 p-2 w-2 text-red-700 text-sm"> 
                    <%= scheduleBatch.errors[:year].first %>
                </div>
                <% end %>
            </div>
        </div>
        <%= f.submit "Simpan", class: "text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    </div>
<% end %>

