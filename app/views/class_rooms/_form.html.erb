<%= form_with(model: class_room) do |f| %>
    <div class="p-4 ">
        <div class="grid gap-4 grid-cols-2">
            <div class="">
                <%= f.label :name, "Nama Kelas", class: "block mb-2 text-xs md:text-sm font-medium #{@classRoom.errors[:name].any? ? 'text-red-700' : ''  }" %>
                <%= f.text_field :name, class: "bg-gray-50 border text-xs md:text-sm rounded-lg block w-full p-2.5
                    #{@classRoom.errors[:name].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
                
                <% if class_room.errors[:name].any? %>
                    <div class="mb-2 p-2 text-red-700 text-xs md:text-sm"> 
                    <%= class_room.errors[:name].first %>
                    </div>
                <% end %>
            </div>
            <div class="">
            <%= f.label :session, "Sesi", class: "block mb-2 text-xs md:text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :session,
                options_for_select([
                    ['Pagi', 'pagi'],
                    ['Siang', 'siang']
                ], selected: class_room.session),
                {},
                class: "bg-gray-50 border border-gray-300 text-gray-900 text-xs md:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" 
            %>
            </div>
            <% if class_room.persisted? %>
                <div class="col-span-2">
                    <%= f.check_box :is_active, class: "mr-2 w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                    <%= f.label :is_active, "Aktif", class: "text-xs md:text-sm font-medium" %>
                </div>
            <% end %>
        </div>
        <%= f.submit "Simpan", class: "mt-4 text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-xs md:text-sm px-5 py-2.5 text-center" %>
    </div>
<% end %>