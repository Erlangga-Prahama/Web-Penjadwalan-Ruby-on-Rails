<%= form_with(model: day) do |f| %>
    <div class="p-4">
        <div class="mb-4">
            <%= f.label :name, "Hari", class: "block mb-2 text-xs md:text-sm font-medium #{day.errors[:name].any? ? 'text-red-700' : ''  }" %>
            <%= f.text_field :name, class: "bg-gray-50 w44 border text-xs md:text-sm rounded-lg block w-full p-2.5
                #{@day.errors[:name].any? ? 'text-red-900 border-red-500 focus:ring-red-500 focus:border-red-500 bg-red-50' : 'text-gray-900 border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
                
            <% if day.errors[:name].any? %>
            <div class="mb-2 p-2 text-red-700 text-xs md:text-sm"> 
                <%= day.errors[:name].first %>
            </div>
            <% end %>
            <% if day.persisted? %>
                <div class="">
                    <%= f.check_box :is_active, class: "mr-2 w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
                    <%= f.label :is_active, "Aktif", class: "text-xs md:text-sm font-medium" %>
                </div>
            <% end %>
        </div>

        <%= f.submit "Simpan", class: "text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-xs md:text-sm px-5 py-2.5 text-center" %>
    </div>
<% end %>

